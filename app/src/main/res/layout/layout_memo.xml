<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2sp"
    android:stretchColumns="0,1,2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewMemo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/material_dynamic_neutral60"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3"
            android:textSize="10sp"
            android:visibility="invisible" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewMemo4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="6"
            android:textSize="10sp"
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewMemo7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="8"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewMemo9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="9"
            android:textSize="10sp"
            android:visibility="invisible" />
    </TableRow>

</TableLayout>